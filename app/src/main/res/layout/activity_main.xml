<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starsky">


    <TextView
        android:textColor="#e7e0e0"
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />


    <EditText

        android:textColor="@color/questioncolor"
        android:id="@+id/main_question"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/question_bar"
        android:textColorHint="@color/defaultquestion"/>

    <ImageButton
        android:layout_marginRight="20dp"
        android:src="@drawable/yodanobackground"
        android:id="@+id/main_button"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="120dp"
        android:background= "@null"/>

    <TextView
        android:textSize="15sp"
        android:textColor="@color/questioncolor"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/text_noquestion"/>

</LinearLayout>