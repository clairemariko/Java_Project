<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.codeclan.com.eightball">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name="example.codeclan.com.eightball.EightBall"
            android:label="@string/app_header">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="example.codeclan.com.eightball.AnswerDetails"
            android:label="@string/app_header"
            android:parentActivityName=".EightBall">
        </activity>



    </application>

</manifest>
